
<MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
    <MudIcon Icon="@MudIcon" Color="@Color" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
    <div>
        <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">@Title</MudText>
        <MudText Typo="Typo.h5">@Value</MudText>
    </div>
</MudPaper>


@code {
    [Parameter]
    public string MudIcon { get; set; } = Icons.Material.Filled.ShortText;
    [Parameter]
    public Color Color { get; set; } = Color.Default;
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public string Value { get; set; } = string.Empty;
}